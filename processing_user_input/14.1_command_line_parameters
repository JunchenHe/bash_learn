#!/bin/bash

#14.1.1 读取参数
# $0-->程序名	$1-->地一个参数 ... ${10}-->

if false;then

factorial=1
for((number=1 ; number <= $1 ; number++ ))
do
	factorial=$[ $factorial * $number ]
done
echo $factorial


fi



#########################

if false;then

total=$[ $1 + $2 ]
echo $1
echo $2
echo $total

fi
#########################3
:<<!
#使用含有空格的字符串需要用 "" 或 '' 扩起来


echo Hello $1,welcome

!

#######################
:<<!

#12.1.2 读取脚本名
echo $0

#掺杂路径，使用basename
echo $(basename $0)

!
#######################



#14.1.3 测试参数
if [ -n "$1" ];then
	echo Hello
else
	echo sorry
fi


###################33




















